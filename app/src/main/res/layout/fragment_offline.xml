<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <!-- Page Title -->
    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Offline Mode"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/routesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle"
            android:dividerPadding="8dp">

            <!-- Offline info -->
            <TextView
                android:id="@+id/offlineInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent searches and routes available offline"
                android:textSize="16sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginBottom="12dp" />

            <!-- Example static card (your dynamic cards should look like this) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/routeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Route: New York â†’ Boston"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/routeDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Saved on Sep 28, 2025"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
