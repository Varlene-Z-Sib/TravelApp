<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Page Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weather_info_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"/>

            <!-- City Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_city"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/weatherLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Check Weather Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/checkWeatherBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_weather"
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="12dp"
                app:iconTint="@android:color/white"/>

            <!-- Weather Result Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/weatherInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/weather_placeholder"
                    android:textSize="16sp"
                    android:textColor="?android:textColorPrimary"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recent Searches Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_searches"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textColor="?android:textColorPrimary"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recentSearchesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
